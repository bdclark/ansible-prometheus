[Unit]
Description={{ prometheus_component_service_name }}
After=network-online.target

[Service]
Type=simple
EnvironmentFile=-/etc/default/{{ prometheus_component_service_name }}
User={{ prometheus_user }}
Group={{ prometheus_group }}
ExecReload=/bin/kill -HUP $MAINPID
ExecStart={{ prometheus_component_install_dir }}/current/{{ prometheus_component_name }} {{ prometheus_component_service_args }}
Restart=on-failure
{% if prometheus_component_service_capabilities is defined and prometheus_component_service_capabilities %}CapabilityBoundingSet={{ prometheus_component_service_capabilities }}{% endif %}

[Install]
WantedBy=multi-user.target
